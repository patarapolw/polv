{
  "name": "@polv/www",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently 'wait-on tcp:$SERVER_PORT && yarn dev:www' 'yarn dev:server'",
    "build": "yarn build:server && concurrently 'wait-on tcp:$SERVER_PORT && yarn build:www && kill-port $SERVER_PORT || :' 'yarn start:server || :'",
    "start": "concurrently 'wait-on tcp:$SERVER_PORT && yarn start:www' 'yarn start:server'",
    "dev:www": "nuxt",
    "build:www": "nuxt generate",
    "start:www": "nuxt start",
    "lint:www": "eslint --ext '.ts,.js,.vue' --ignore-path .gitignore .",
    "openapi": "wget http://127.0.0.1:$SERVER_PORT/api/doc/json -O ./assets/openapi.json && typegen ./assets/openapi.json > ./types/openapi.d.ts",
    "dev:server": "NODE_ENV=development ts-node-dev -P server/tsconfig.json -r tsconfig-paths/register server/index.ts",
    "build:server": "tsc -P server/tsconfig.json",
    "start:server": "node -r tsconfig-paths/register server-dist/index.js",
    "ts": "ts-node -P server/tsconfig.json -r tsconfig-paths/register"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@nuxt/typescript-runtime": "^2.0.1",
    "@nuxtjs/fontawesome": "^1.1.2",
    "axios": "^0.21.1",
    "better-sqlite3": "^7.1.2",
    "concurrently": "^6.0.0",
    "core-js": "^3.8.3",
    "dayjs": "^1.10.4",
    "fastify": "^3.14.0",
    "fastify-swagger": "^4.4.1",
    "jsonschema-definer": "^1.3.2",
    "nuxt": "^2.14.12",
    "nuxt-buefy": "^0.4.4",
    "nuxt-mq": "^2.0.2",
    "nuxt-property-decorator": "^2.9.1",
    "openapi-client-axios": "^3.13.1",
    "tsconfig-paths": "^3.9.0",
    "wait-on": "^5.2.1"
  },
  "devDependencies": {
    "@nuxt/types": "^2.14.12",
    "@nuxt/typescript-build": "^2.0.4",
    "@nuxtjs/eslint-config-typescript": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@patarapolw/scope-css": "^1.3.0",
    "@types/better-sqlite3": "^5.4.1",
    "@types/cheerio": "^0.22.27",
    "@types/ejs": "^3.0.6",
    "@types/js-yaml": "^4.0.0",
    "@types/pino": "^6.3.6",
    "@types/showdown": "^1.9.3",
    "babel-eslint": "^10.1.0",
    "cheerio": "^1.0.0-rc.5",
    "ejs": "^3.1.6",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.5.0",
    "fast-glob": "^3.2.5",
    "fastify-cors": "^5.2.0",
    "highlight.js": "^10.6.0",
    "highlightjs-vue": "highlightjs/highlightjs-vue",
    "html-encoder-decoder": "^1.3.9",
    "import-sort-parser-typescript": "^6.0.0",
    "js-yaml": "^4.0.0",
    "kill-port": "^1.6.1",
    "nuxt-typed-vuex": "^0.1.22",
    "openapi-client-axios-typegen": "^3.13.1",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "10",
    "showdown": "^1.9.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
